<Window x:Class="WPFUI.CreateTournament"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="Create Tournament" Height="526" Width="585.6">
    <Grid Margin="0,0,3.2,-0.2">
        <Label Content="Create Tournament" RenderTransformOrigin="0.477,0.485" FontSize="25" Margin="29,28,0,418" HorizontalAlignment="Left" Width="242"/>
        <Label Content="Tournament name" Margin="42,86,0,0" HorizontalAlignment="Left" Width="166" Height="37" VerticalAlignment="Top"/>
        <TextBox Name="txtTournamentName" HorizontalAlignment="Left" Height="23" Margin="42,128,0,0" TextWrapping="Wrap" Text="Tournament_name" VerticalAlignment="Top" Width="157"/>
        <Label Content="Entry fee" Margin="41,174,0,290" HorizontalAlignment="Left" Width="69"/>
        <TextBox Name="txtEntryFee" HorizontalAlignment="Left" Height="23" Margin="110,178,0,0" TextWrapping="Wrap" Text="entry_fee" VerticalAlignment="Top" Width="76"/>
        <Label Content="Select team" Margin="41,271,0,188" HorizontalAlignment="Left" Width="121"/>
        <ComboBox Name="cbSelectTeam" HorizontalAlignment="Left" Margin="41,301,0,0" VerticalAlignment="Top" Width="158"/>
        <Button Name="button_createNewTeam" Content="Create team" HorizontalAlignment="Left" Margin="124,337,0,0" VerticalAlignment="Top" Width="75" Click="linklbCreateNewTeam_LinkClicked"/>
        <Button Name="addteam" Content="Add team" HorizontalAlignment="Left" Margin="41,337,0,0" VerticalAlignment="Top" Width="75" Click="btnAddTeam_Click"/>
        <Button Name="button_createPrize" Content="Create prize" HorizontalAlignment="Left" Margin="460,280,0,0" VerticalAlignment="Top" Width="106" Click="btnCreatePrize_Click" Height="47"/>
        <ListBox Name="lstTournamentTeams" HorizontalAlignment="Left" Height="121" Margin="264,116,0,0" VerticalAlignment="Top" Width="178"/>
        <Label Content="Teams / players" Margin="264,84,0,0" HorizontalAlignment="Left" Width="166" Height="32" VerticalAlignment="Top"/>
        <Button Name="button_removeSelected" Content="Remove selected" HorizontalAlignment="Left" Margin="460,162,0,0" VerticalAlignment="Top" Width="106" Height="49" Click="btnRemoveSelectedPlayers_Click"/>
        <ListBox Name="lstPrizes" HorizontalAlignment="Left" Height="121" Margin="264,275,0,0" VerticalAlignment="Top" Width="178"/>
        <Label Content="Prizes" Margin="264,247,0,0" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Width="166"/>
        <Button Name="button_removeSelected_Copy" Content="Remove selected" HorizontalAlignment="Left" Margin="460,347,0,0" VerticalAlignment="Top" Width="106" Height="49" Click="btnRemoveSelectedPrizes_Click"/>
        <Button Name="button_createTournament" Content="Create Tournament" HorizontalAlignment="Left" Margin="197,424,0,0" VerticalAlignment="Top" Width="190" Height="46" Click="btnCreateTournament_Click"/>

    </Grid>
</Window>

