<Window x:Class="WPFUI.CreateTournamentDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Дашборд" Height="320" Width="330" ResizeMode="NoResize" Background="#9878F1" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label FontWeight="Bold" Foreground="#fff" Content="Tournament dashboard" RenderTransformOrigin="0.477,0.485" FontSize="25" Margin="12,28,-2,0" HorizontalAlignment="Left" Width="286" Height="58" VerticalAlignment="Top"/>
        <Label FontWeight="Medium" Foreground="#fff" Content="Загрузите прошедший турнир" Margin="63,93,0,0" HorizontalAlignment="Left" Width="200" Height="28" VerticalAlignment="Top"/>
        <ComboBox Name="cbLoadExistingTournament" HorizontalAlignment="Left" Margin="57,121,0,0" VerticalAlignment="Top" Width="196"/>
        <Button Foreground="#fff" Background="#F35858" Content="Загрузить" HorizontalAlignment="Left" Margin="118,169,0,0" VerticalAlignment="Top" Width="74" Click="btnLoadTournament_Click" Padding="5" />
        <Button Foreground="#fff" Background="#F35858" Content="Создать турнир" HorizontalAlignment="Left" Margin="83,209,0,0" VerticalAlignment="Top" Width="144" Height="54" Click="btnCreateTournament_Click"/>

    </Grid>
</Window>

